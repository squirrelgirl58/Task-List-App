<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.number_field :priority %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>

  <div class="field">
    <%= f.label :is_completed %>
    <%= f.check_box :is_completed %>
  </div>

  <div class="field">
    <%= f.label :is_private %>
    <%= f.check_box :is_private %>
  </div>

  <div class="field">
    <%= f.label :task_list_id %>
    <%= f.collection_select :task_list_id, TaskList.all, :id, :name, prompt: "Please select a list.." %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
