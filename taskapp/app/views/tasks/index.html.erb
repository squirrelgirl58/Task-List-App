<p id="notice"><%= notice %></p>

<h1>Pending Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Is completed</th>
      <th>Task list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.pending.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td><%= task.is_completed %></td>
        <td><%= task.task_list.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Last 5 Completed Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Priority</th>
      <th>Due date</th>
      <th>Is completed</th>
      <th>Task list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.completed.first(5).each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.priority %></td>
        <td><%= task.due_date %></td>
        <td><%= task.is_completed %></td>
        <td><%= task.task_list.name %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

